
@{
    ViewBag.Title = "Tạo mới khuyến mãi";
}

<div class="create-sale position-relative mb-4">
    @{
        Html.RenderPartial("WeatherPartial");
    }

    <h2 class="title">Tạo mới khuyến mãi</h2>
    <div class="breadcrumb">
        <ul class="breadcrumb-list d-flex">
            <li class="breadcrumb-item">
                <a href="/admin">Admin</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/admin/sale">Khuyến mãi</a>
            </li>
            <li class="breadcrumb-item">
                Tạo mới khuyến mãi
            </li>
        </ul>
    </div>

    <div class="create-sale-content">
        <form class="create-sale-frm">
            <div class="form-box-header">
                <h5 class="form-header-text">Thời gian khuyến mãi</h5>
            </div>
            <div class="create-sale-box">
                <div>
                    <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                        <label for="StartTime">Thời gian bắt đầu</label>
                        <input type="text" name="StartTime" id="StartTime" value="" class="form-add-input" required />
                    </div>
                    <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                        <label for="EndTime">Thời gian kết thúc</label>
                        <input type="text" name="EndTime" id="EndTime" value="" class="form-add-input" required />
                    </div>
                </div>
            </div>

            <div class="form-box-header">
                <h5 class="form-header-text">Sản phẩm khuyến mãi</h5>
            </div>
            <div class="create-sale-detail-box">
                <div class="add-order-products">
                    <div>
                        <h6>Tìm kiếm sản phẩm</h6>
                        <div class="d-flex align-items-stretch justify-content-between my-3 order-search-p position-relative">
                            <input type="text" id="order-search-p" value="" placeholder="Nhập tên sản phẩm" autocomplete="off" />
                            <div class="pro-search-auto-complete position-absolute">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-error"></div>
            </div>
            <div class="d-flex gap-2 justify-content-start">
                <button type="submit" class="submit-create-sale">Tạo mới</button>
            </div>
        </form>
    </div>
</div>
