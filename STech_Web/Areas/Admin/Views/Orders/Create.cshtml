
@{
    ViewBag.Title = "Tạo đơn hàng";
}

<section class="create-order">
    <h2 class="title">Tạo đơn hàng</h2>
    <div class="breadcrumb">
        <ul class="breadcrumb-list d-flex">
            <li class="breadcrumb-item">
                <a href="/admin">Admin</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/admin/orders"> Quản lý đơn hàng</a>
            </li>
            <li class="breadcrumb-item">
                Tạo đơn hàng
            </li>
        </ul>
    </div>
    <form action="#" method="post" class="create-order-box mb-4">
        <div class="form-box-header">
            <h5 class="form-header-text">Thông tin khách hàng</h5>
        </div>
        <div class="create-order-items">
            <div>
                <h6>Tìm kiếm khách hàng</h6>
                <div class="d-flex align-items-stretch justify-content-between my-3 position-relative search-cus-by-phone">
                    <input type="text" id="search-cus-by-phone" value="" placeholder="Số điện thoại" autocomplete="off" />
                    <button class="create-cus-btn">
                        <i class='bx bx-plus'></i>
                    </button>
                    <div class="cus-search-auto-complete position-absolute">

                    </div>
                </div>
            </div>
            <div>
                <input type="hidden" name="cusID" id="cusID" value="" />
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusName">Tên KH</label>
                    <input type="text" name="cusName" id="cusName" value="" class="form-add-input" required />
                </div>
                <div class="d-flex align-items-center gap-5 my-3">
                    <span>Giới tính</span>
                    <div class="d-flex gap-3">
                        <div>
                            <input type="radio" name="cusGender" id="cusGender-Male" value="Nam" required/>
                            <label for="cusGender-Male">Nam</label>
                        </div>
                        <div>
                            <input type="radio" name="cusGender" id="cusGender-FeMale" value="Nữ" required/>
                            <label for="cusGender-FeMale">Nữ</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusPhone">Số ĐT</label>
                    <input type="text" name="cusPhone" id="cusPhone" value="" class="form-add-input" required />
                </div>
            </div>
            <div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusAddress">Địa chỉ</label>
                    <input type="text" name="cusAddress" id="cusAddress" value="" class="form-add-input" required />
                </div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusEmail">Email</label>
                    <input type="text" name="cusEmail" id="cusEmail" value="" class="form-add-input" />
                </div>
            </div>
        </div>
        <div class="form-box-header">
            <h5 class="form-header-text mt-3">Thông tin đơn hàng</h5>
        </div>
        <div class="add-order-products">
            <div>
                <h6>Tìm kiếm sản phẩm</h6>
                <div class="d-flex align-items-stretch justify-content-between my-3 order-search-p position-relative">
                    <input type="text" id="order-search-p" value="" placeholder="Nhập tên sản phẩm" autocomplete="off" />
                    <div class="pro-search-auto-complete position-absolute">
                       
                    </div>
                </div>
            </div>
        </div>
        <div class="order-create-products my-3">
            <table class="table">
                <tr>
                    <th>Mã sản phẩm</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá bán</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                    <th></th>
                </tr>
            </table>
        </div>
        <div class="order-note-box">
            <h6>Ghi chú</h6>
            <textarea id="order-note" placeholder="Ghi chú"> </textarea>
        </div>
        <div class="form-box-header">
            <h5 class="form-header-text mt-3">Thanh toán</h5>
        </div>
        <div class="order-pay">
            <div class="select-payment-method d-flex column-gap-5 row-gap-2 my-3 flex-wrap">
                <div class="payment-method-item">
                    <input type="radio" name="paymentmethod" value="Tiền mặt" id="cash" required/>
                    <label for="cash">Tiền mặt</label>
                </div>
                <div class="payment-method-item">
                    <input type="radio" name="paymentmethod" value="Chuyển khoản" id="transfer" required />
                    <label for="transfer">Chuyển khoản</label>
                </div>
                <div class="payment-method-item">
                    <input type="radio" name="paymentmethod" value="Thanh toán khi nhận hàng" id="cod"required />
                    <label for="cod">Thanh toán khi nhận hàng</label>
                </div>
            </div>
            <div class="order-totalprice d-flex align-items-center mt-5">
                <p>Tổng tiền:&nbsp;&nbsp;</p>
                <span>0đ</span>
            </div>
        </div>
        <div class="create-order-action mt-2">
            <button type="submit" class="order-btn create-order-btn">
                TẠO ĐƠN HÀNG
            </button>
        </div>
    </form>
</section>

@{
    Html.RenderPartial("CreateCustomerPartial");
 }