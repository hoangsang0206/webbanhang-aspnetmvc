    <script type="text/javascript" src="/js/products.js" defer></script>
    @using STech_Web.Models;
</head>
<body>

    <header>
        <div class="top-header">
        </div>
        <div class="container-xxl">
            <div id="header">
                <div class="header-box">
                    <div class="mobile-categories-btn">
                        <i class="fa-solid fa-bars"></i>
                    </div>
                    <a href="\" class="mobile-logo">
                        <img src="/images/logo/stech-logo-mobile.png" alt="Stech Logo">
                    </a>
                    <a href="\" class="logo">
                        <img src="/images/logo/stech-logo.png" alt="Stech Logo">
                    </a>
                </div>
                <div class="categories-btn">
                    <i class="fa-solid fa-bars"></i>
                    <span>Danh mục</span>
                </div>

                <div class="search d-flex align-items-center">
                    <div class="close-search flex-column align-items-center">
                        <i class="fa-solid fa-arrow-left"></i>
                    </div>
                    <form action="/search" method="get" class="search-form">
                        <input type="text" id="search" name="search" class="search-box" placeholder="Bạn cần tìm gì?" required autocomplete="off" />
                        <button type="submit" class="search-btn"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                    <div class="ajax-search-autocomplete">
                        <div class="ajax-search-items"></div>
                        <div class="ajax-search-empty text-black">
                            Không tìm thấy sản phẩm nào...
                        </div>
                    </div>
                    <div class="search-history">
                        <h4>Lịch sử tìm kiếm:</h4>
                        <ul class="search-history-list">
                        </ul>
                        <div class="clear-search-history d-flex align-items-center justify-content-center">
                            Xóa lịch sử tìm kiếm
                        </div>
                    </div>
                </div>

                <div class="header-hotline">
                    <i class="fa-solid fa-headphones-simple header-icon"></i>
                    <span>
                        Hotline: <br />
                        <b>0123456789</b>
                    </span>
                </div>
                <div class="order-check">
                    <a href="/account#orders">
                        <i class="fa-regular fa-clipboard header-icon"></i>
                        <span>Tra cứu đơn hàng</span>
                    </a>
                </div>
                <div class="header-btn">
                    <div class="cart-btn">
                        <a href="/cart">
                            <ion-icon name="cart-outline"></ion-icon>
                            <div class="cart-count-holder">
                                <div class="cart-count">0</div>
                            </div>
                            <span>Giỏ <br>hàng</span>
                        </a>
                    </div>
                </div>
                <div class="login-btn-box position-relative">
                    <div class="login-btn">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="/account" class="logged-link">
                                <span>@User.Identity.Name</span>
                            </a>
                            <div class="login-info-box account-logged position-absolute">
                                <a href="/account">
                                    <div class="login-info-name">
                                        <img src="/images/icons/hello.png" alt="" />
                                        <span> Xin chào, @User.Identity.Name</span>
                                    </div>
                                </a>
                                <hr />
                                <a href="/account#orders">
                                    <div class="login-info-order">
                                        <i class="fa-regular fa-clipboard"></i>
                                        <span>Đơn hàng của tôi</span>
                                    </div>
                                </a>
                                <hr />
                                <div class="login-info-logout d-flex align-items-center">
                                    <ion-icon name="log-out-outline"></ion-icon>
                                    <span>Đăng xuất</span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a href="#" class="login-link">
                                <i class="fa-regular fa-user header-icon login-btn"></i>
                                <span>Đăng<br /> nhập</span>
                            </a>

                            <div class="login-info-box position-absolute">
                                <h4>Đăng nhập/Đăng ký</h4>
                                <div class="login-register-btn-box d-flex align-items-center">
                                    <button class="action-login-btn position-relative">
                                        Đăng nhập
                                    </button>
                                    <button class="action-register-btn position-relative">
                                        Đăng ký
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="sub-header">
            <div class="container-xxl">
                <ul class="sub-header-item-list d-flex align-items-center">
                </ul>
            </div>
        </div>
    </header>

    @{
        Html.RenderPartial("Account_Partial");
        Html.RenderPartial("LoginPartial", new STech_Web.ViewModel.LoginVM());
        Html.RenderPartial("RegisterPartial", new STech_Web.ViewModel.RegisterVM());
    }

    <nav>
        <div class="container-xxl">
            <div class="navigation">
                <a href="#" class="nav-item">
                    <i class="fa-solid fa-tags nav-icon"></i>
                    <span>Tổng hợp khuyến mãi</span>
                </a>
                <div class="nav-break"></div>
                <a href="#" class="nav-item">
                    <i class="fa-solid fa-screwdriver-wrench nav-icon"></i>
                    <span>Chính sách bảo hành</span>
                </a>
                <div class="nav-break"></div>
                <a href="#" class="nav-item">
                    <i class="fa-solid fa-credit-card nav-icon"></i>
                    <span>Hướng dẫn thanh toán</span>
                </a>
                <div class="nav-break"></div>
                <a href="#" class="nav-item">
                    <i class="fa-solid fa-money-check-dollar nav-icon"></i>
                    <span>Hướng dẫn trả góp</span>
                </a>
                <div class="nav-break"></div>
                <a href="#" class="nav-item">
                    <i class="fa-solid fa-newspaper nav-icon"></i>
                    <span>Tin tức</span>
                </a>
                <div class="nav-break"></div>
                <a href="/about" class="nav-item">
                    <i class="fa-solid fa-phone nav-icon"></i>
                    <span>Liên hệ</span>
                </a>
            </div>
        </div>
    </nav>

    <nav class="bottom-nav-mobile justify-content-between align-items-center">
        <a href="\" class="bottom-nav-link bottom-nav-home d-flex flex-column align-items-center justify-content-center @( ViewBag.ActiveBotNav == "home" ? "nav-link-active" : "")">
            <ion-icon name="home-outline" class="bottom-nav-icon"></ion-icon>
            <span>Trang chủ</span>
        </a>
        <div class="bottom-nav-link bottom-nav-show-sidebar d-flex flex-column align-items-center justify-content-center">
            <ion-icon name="grid-outline" class="bottom-nav-icon"></ion-icon>
            <span>Danh mục</span>
        </div>
        <a href="/account#orders" class="bottom-nav-link bottom-nav-promotion d-flex flex-column align-items-center justify-content-center">
            <ion-icon name="clipboard-outline" class="bottom-nav-icon"></ion-icon>
            <span>Đơn hàng</span>
        </a>
        <a href="#" class="bottom-nav-link bottom-nav-chat d-flex flex-column align-items-center justify-content-center">
            <ion-icon name="chatbubbles-outline" class="bottom-nav-icon"></ion-icon>
            <span>Tư vấn</span>
        </a>
        @if (User.Identity.IsAuthenticated)
        {
            <a href="/account" class="bottom-nav-link d-flex flex-column align-items-center justify-content-center @( ViewBag.ActiveBotNav == "account" ? "nav-link-active" : "")">
                <ion-icon name="person-outline" class="bottom-nav-icon"></ion-icon>
                <span>@User.Identity.Name</span>
            </a>
        }
        else
        {
            <a href="#" class="bottom-nav-link bottom-nav-account d-flex flex-column align-items-center justify-content-center">
                <ion-icon name="person-outline" class="bottom-nav-icon"></ion-icon>
                <span>Tài khoản</span>
            </a>
        }
    </nav>

    <div class="mobile-sidebar">
        <div class="mobile-sidebar-header d-flex align-items-center justify-content-between">
            <span class="mobile-sidebar-header-title">DANH MỤC SẢN PHẨM</span>
            <div class="sidebar-close-btn">
                <ion-icon name="close-outline" class="close-icon"></ion-icon>
            </div>
        </div>
        <div class="mobile-sidebar-content">
            @{
                Html.RenderPartial("Megamenu_Partial");
            }

            <div class="mobile-sidebar-info">
                <h4 class="sidebar-info-title">
                    Thông tin
                </h4>
                <div class="sidebar-info-content">
                    <ul class="sidebar-info-list">
